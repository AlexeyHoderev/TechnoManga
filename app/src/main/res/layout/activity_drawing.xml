<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_new"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/pensilButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pencil" />

        <ImageButton
            android:id="@+id/eraserButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/fillButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fill" />

        <ImageButton
            android:id="@+id/textButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/text" />

        <ImageButton
            android:id="@+id/colorPickerButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/redoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/forward2" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/save" />

        <ImageButton
            android:id="@+id/importImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/imports" />

        <ImageButton
            android:id="@+id/lockDrawingButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/lock2" />

    </LinearLayout>
    <SeekBar
        android:id="@+id/sizeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <com.example.ad.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/zoomInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Увеличить" />

        <Button
            android:id="@+id/zoomOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уменьшить" />

        <Button
            android:id="@+id/joystickUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/joystickLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←" />

            <Button
                android:id="@+id/joystickRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→" />
        </LinearLayout>

        <Button
            android:id="@+id/joystickDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓" />
    </LinearLayout>
</LinearLayout>
